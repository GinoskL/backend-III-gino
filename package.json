{
  "name": "adoptme-backend",
  "version": "1.0.0",
  "description": "Backend API for Adoptme pet adoption platform",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "mocha test/**/*.test.js --timeout 10000 --exit",
    "test:watch": "mocha test/**/*.test.js --timeout 10000 --watch",
    "docker:build": "docker build -t adoptme-backend .",
    "docker:run": "docker run -p 8080:8080 --env-file .env adoptme-backend"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "pets",
    "adoption"
  ],
  "author": "Gino",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-mongo": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "5.5",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "chai": "^4.3.8",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
